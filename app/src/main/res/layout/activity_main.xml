<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#f5f5f5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Child Screen Time Parent Control"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:gravity="center"
        android:padding="16dp"
        android:background="#ffffff"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <Button
        android:id="@+id/scan_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scan for Child Devices"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="#4CAF50"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:elevation="2dp" />

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press scan to discover child devices on your network"
        android:textSize="16sp"
        android:textColor="#666666"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Discovered Devices:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/device_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#ffffff"
        android:divider="#e0e0e0"
        android:dividerHeight="1dp"
        android:elevation="1dp"
        android:padding="8dp"
        android:layout_marginBottom="16dp" />

    <!-- Device Control Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffff"
        android:padding="16dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Device Control"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the Device ID shown on the child device:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/device_id_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Device ID (e.g., A1B2C3D4E5F6G7H8)"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:inputType="textCapCharacters"
            android:maxLength="16"
            android:background="#f0f0f0"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Command:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/command_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter command (e.g., GET_STATUS, PING, LOCK_DEVICE)"
            android:textSize="14sp"
            android:background="#f0f0f0"
            android:padding="12dp"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/send_command_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Send Encrypted Command"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:background="#FF9800"
            android:padding="12dp"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>
